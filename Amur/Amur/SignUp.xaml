<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Amur.SignUp"
             Title="Registrarse">
    <ContentPage.Content>
        <StackLayout VerticalOptions="Center">
            <Label Text="Eres un..."
                   FontSize="Medium" 
                   HorizontalOptions="Center"/>
            
            <Button Text="Cliente"
                    FontSize="Large"
                    Clicked="signUpClient"/>

            <Button Text="Negocio" 
                    FontSize="Large"
                    Clicked="signUpBusiness"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>